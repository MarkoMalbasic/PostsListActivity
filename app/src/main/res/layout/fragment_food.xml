<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/kitchen"
    tools:context=".Fragments.FoodFragments.FoodFragment">

    <ScrollView
        android:id="@+id/foodScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMezedes"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:alpha="0.7"
                android:fontFamily="@font/cycladic"
                android:text="MEZEDES"
                android:textAllCaps="false"
                android:textColor="#C9942A"
                android:textSize="20dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:rippleColor="#ffffff"
                app:strokeColor="#C9942A"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMains"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.7"
                android:fontFamily="@font/cycladic"
                android:text="MAINS"
                android:textColor="#C9942A"
                android:textSize="20dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnMezedes"
                app:rippleColor="#ffffff"
                app:strokeColor="#C9942A"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDesserts"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.7"
                android:fontFamily="@font/cycladic"
                android:text="DESSERTS"
                android:textColor="#C9942A"
                android:textSize="20dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnMains"
                app:rippleColor="#ffffff"
                app:strokeColor="#C9942A"
                app:strokeWidth="2dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="163dp"
                android:layout_height="124dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/avli"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/cycladic"
                android:text="OUR FOOD"
                android:textColor="#C9942A"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Guests can expect to journey through a menu of authentic meze, salads, vegan delicacies, seafood and slow-cooked meats. Each dish at Avli by tashas is created with heart and with an importance to authenticity, with a plethora of ingredients sourced directly from Greece resulting in unique flavours that illustrate the Avli experience captured in every single dish. The creativity and imagination of the chefs result in plates filled with Greek sophistication and comfort. "
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRVList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>