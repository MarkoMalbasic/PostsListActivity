<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bar"
    tools:context=".Fragments.FoodFragments.FoodFragment">

    <com.google.android.material.tabs.TabLayout
        style="@style/MyTabLayout"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/champagneTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp"
            android:text="Champagne"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/roseTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rose Wine" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/whiteTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White Wine" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/redTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Wine" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />




</androidx.constraintlayout.widget.ConstraintLayout>